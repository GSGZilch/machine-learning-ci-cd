					"def union_df_list(df_list):\r\n",
					"    df = df_list[0]\r\n",
					"    if len(df_list) > 1:\r\n",
					"        for next_df in df_list[1:]:\r\n",
					"            df = df.union(next_df)\r\n",
					"    return df"
